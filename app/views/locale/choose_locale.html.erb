<div class="flex flex-col items-center justify-center min-h-screen text-center">
    <% path = params[:redirect_to] || root_path %>
    <div>
      <%= image_tag 'logo.jpg', class: 'mb-3' %>
    </div>
    <div>
      <h2 class="text-xl text-blue uppercase md:text-3xl">Choose language</h2>
    </div>
    <div>
      <div class="m-5">
        <%= link_to "English", "/en#{path}", class: "form-button" %>
      </div>
      <div class="m-5">
        <%= link_to "Français", "/fr#{path}", class: "form-button" %>
      </div>
      <div class="m-5">
        <%= link_to "Tiếng Việt", "/vi#{path}", class: "form-button" %>
      </div>
    </div>


</div>


